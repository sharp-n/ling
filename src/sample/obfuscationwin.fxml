<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ObfuscationController">
    <children>
        <AnchorPane prefHeight="414.0" prefWidth="491.0" style="-fx-background-color: #f2d394;">
            <children>
                <Button layoutX="366.0" layoutY="21.0" mnemonicParsing="false" onAction="#openFile" prefHeight="27.0" prefWidth="102.0" style="-fx-background-color: #DEB887; -fx-border-color: #A0522D;" text=" Open FIle" />
                <TextArea fx:id="codeArea" editable="false" layoutX="21.0" layoutY="100.0" prefHeight="292.0" prefWidth="449.0" style="-fx-background-color: #A0522D;" wrapText="true" />
                <Button layoutX="22.0" layoutY="59.0" mnemonicParsing="false" onMouseClicked="#tangle" prefHeight="27.0" prefWidth="102.0" style="-fx-background-color: #DEB887; -fx-border-color: #A0522D;" text="Obfuscate" />
                <Button layoutX="366.0" layoutY="59.0" mnemonicParsing="false" onMouseClicked="#saveFile" prefHeight="27.0" prefWidth="102.0" style="-fx-background-color: #DEB887; -fx-border-color: #A0522D;" text="Save file" />
            <TextField fx:id="passTextField" editable="false" layoutX="22.0" layoutY="21.0" prefHeight="27.0" prefWidth="332.0" promptText="Choose file -&gt;" style="-fx-border-color: #A0522D;" />
            <Button fx:id="showVarButton" disable="true" layoutX="251.0" layoutY="59.0" mnemonicParsing="false" onMouseClicked="#showVar" prefHeight="27.0" prefWidth="102.0" style="-fx-background-color: #DEB887; -fx-border-color: #A0522D;" text="Show Variables" />
            <Button fx:id="editButton" layoutX="137.0" layoutY="59.0" mnemonicParsing="false" onMouseClicked="#editCode" prefHeight="27.0" prefWidth="102.0" style="-fx-background-color: #DEB887; -fx-border-color: #A0522D;" text="Edit" />
            <Label layoutX="424.0" layoutY="394.0" opacity="0.5" text="by sharp" textFill="SIENNA" />
            </children>
        </AnchorPane>
    </children>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
</GridPane>
